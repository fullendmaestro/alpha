{
  "name": "@langchain/mcp-adapters",
  "version": "1.0.0",
  "description": "LangChain.js adapters for Model Context Protocol (MCP)",
  "author": "LangChain",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:langchain-ai/langchainjs.git"
  },
  "homepage": "https://github.com/langchain-ai/langchainjs/tree/main/libs/langchain-mcp-adapters/",
  "bugs": {
    "url": "https://github.com/langchain-ai/langchainjs/issues"
  },
  "scripts": {
    "build": "tsc",
    "build:main": "pnpm --filter @langchain/build compile @langchain/mcp-adapters",
    "build:examples": "tsc -p ./examples/tsconfig.json",
    "clean": "rm -rf dist/ dist-cjs/ .turbo/",
    "format": "prettier --config .prettierrc --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --config .prettierrc --check \"src\" \"examples/**/*.ts\"",
    "lint": "run-s lint:eslint lint:dpdm",
    "lint:dpdm": "dpdm --skip-dynamic-imports circular --exit-code circular:1 --no-warning --no-tree src/**/*.ts examples/**/*.ts",
    "lint:eslint": "eslint --cache src/ examples/",
    "lint:fix": "pnpm lint:eslint --fix && pnpm lint:dpdm",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "keywords": [
    "langchain",
    "mcp",
    "model-context-protocol",
    "ai",
    "tools"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "debug": "^4.4.3",
    "zod": "^3.25.76 || ^4"
  },
  "peerDependencies": {
    "@langchain/core": "^1.0.0",
    "@langchain/langgraph": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@langchain/core": {
      "optional": false
    },
    "@langchain/langgraph": {
      "optional": false
    }
  },
  "optionalDependencies": {
    "extended-eventsource": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@alpha/eslint-config": "workspace:*",
    "@tsconfig/recommended": "^1.0.10",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.8",
    "@vitest/coverage-v8": "^3.2.4",
    "dpdm": "^3.14.0",
    "eslint": "^9.36.0",
    "eventsource": "^3.0.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4",
    "@langchain/core": "^1.0.1",
    "@langchain/langgraph": "^1.0.1",
    "@langchain/openai": "^1.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "langchain": "^1.0.1"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "directories": {
    "example": "examples"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "input": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ]
}
